{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/mremotego",
            "args": ["list"],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug GUI",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/mremotego-gui",
            "env": {
                "CGO_ENABLED": "1"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Current Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug CLI with args",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/mremotego",
            "args": [],
            "console": "integratedTerminal"
        }
    ]
}
